    "prettier": "^3.1.1",
    "storybook": "^7.6.7",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-tsconfig-paths": "^4.2.3",
    "vitest": "^1.1.3"
